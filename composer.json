{
    "name": "akrabat/slim-api-skeleton",
    "description": "A Slim Framework skeleton application for API development",
    "keywords": ["microframework", "rest", "router", "psr7", "api"],
    "homepage": "http://github.com/akrabat/slim-api-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Allen",
            "email": "rob@akrabat.com",
            "homepage": "https://akrabat.com/"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "slim/slim": "^3.5",
        "monolog/monolog": "^1.21"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.5 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	}

}
